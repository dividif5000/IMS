<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contrato.ActivityContratoGasBanco">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pngwing_com">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3Gas"
                    android:layout_width="182dp"
                    android:layout_height="111dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/inergas_logo_transparente" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="397dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblDatosBancoGas"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/fondogas"
                    android:ems="10"
                    android:gravity="center"
                    android:text="@string/lblDatosBanco"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/txtNIfBANContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtNIFBanco"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtNombreBANContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtNumeroSumi"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtIBANBANContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtIBANBanco"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chkRecordarDatosBancoGas"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/chkRecordarBancoContrato" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAnteriorContratoGas5"
                    android:layout_width="132dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_verde"
                    android:gravity="center"
                    android:text="@string/btnAnteriorClienteContrato"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCreaContratoFinalGas"
                    android:layout_width="132dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_verde"
                    android:gravity="center"
                    android:text="@string/btnCreaContratoGas"
                    android:textColor="@color/white" />

            </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnHomeContratoGas"
                    android:layout_width="294dp"
                    android:layout_height="53dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_verde_presionado"
                    android:text="@string/btnHomeContrato"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>