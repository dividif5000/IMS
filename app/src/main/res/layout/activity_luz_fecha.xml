                android:layout_height="219dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLogo4"
                    android:layout_width="match_parent"
                    android:layout_height="218dp"
                    android:src="@drawable/logo_iner" />

            </LinearLayout>

            <LinearLayout
