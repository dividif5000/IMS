                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/fondo_edittext"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hintDiasFacturados"
