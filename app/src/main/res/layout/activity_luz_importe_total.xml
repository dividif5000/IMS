                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLogo5"
                    android:layout_width="236dp"
                    android:layout_height="198dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/logo_escalax34" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblEnergia"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_margin="10dp"
                android:background="@drawable/fondorelleno"
                android:gravity="center"
                android:text="@string/lblEnergia"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="468dp"
                android:layout_margin="10dp"
                android:background="@drawable/fondo_edittext"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblImporteEne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="@string/lblImporteEnergia"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtE1Importe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/txtE2Importe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/txtE3Importe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/txtE4Importe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
