<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contrato.contratoGas.ActivityContratoGasSuministro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pngwing_com">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3Gas"
                    android:layout_width="182dp"
                    android:layout_height="111dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/inergas_logo_transparente" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblDatosContratoGas"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/fondogas"
                    android:ems="10"
                    android:gravity="center"
                    android:text="@string/lblDatosSuministro"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/txtDireccionSUMIContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtDireccionSumi"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtNumeroSUMIContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtNumeroSumi"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtPisoSUMIContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtPisoSumi"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtPuertaSUMIContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtPuertaSumi"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtLocalidadSUMIContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtLocalidadSumi"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtProvinciaSUMIContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtProvinciaSumi"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtCPSUMIContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtCPSSUMIContrato"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtDistribuidoraSUMIContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtDistribuidoraSumi"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtCNAESUMIContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtCNAESumi"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBuscaConsumoGas"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_verde_presionado"
                    android:gravity="center"
                    android:text="@string/btnBuscaConsumo"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/txtCUPSSUMIContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtCUPSSumi"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtConsumoSUMIContratoGas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hinttxtConsumoSumi"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chkRecordarDatosSuministroGas"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/chkRecordarDatosSuministro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAnteriorContratoGas2"
                    android:layout_width="132dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_verde_presionado"
                    android:gravity="center"
                    android:text="@string/btnAnteriorClienteContrato"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSiguienteContratoGas2"
                    android:layout_width="129dp"
                    android:layout_height="53dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_verde_presionado"
                    android:gravity="center"
                    android:text="@string/btnSiguienteSuministroContrato"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>