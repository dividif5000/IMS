<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sips.ActivitySipsLuz">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_dgv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="16dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="182dp"
                android:layout_height="111dp"
                app:srcCompat="@drawable/logo_escalax34" />

            <EditText
                android:id="@+id/txtBuscaCups"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_margin="10dp"
                android:background="@drawable/fondo_edittext"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/hintBuscaCups"
                android:inputType="textPersonName"
                android:text="ES0021000003145781QE"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBuscaCups"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/boton_naranja"
                android:gravity="center"
                android:text="@string/btnBuscaCups"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblActiva"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_margin="10dp"
                android:background="@drawable/fondorelleno"
                android:gravity="center"
                android:text="@string/lblConsumoCups"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtResultadoActiva"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="10dp"
                android:background="@drawable/fondo_edittext"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblPotencias"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_margin="10dp"
                android:background="@drawable/fondorelleno"
                android:gravity="center"
                android:text="@string/lblPotenciaCups"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:background="@drawable/fondo_edittext"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblPotencia1Cups"
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="P1"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/txtCupsPotencia1"
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"

                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/lblPotencia2Cups"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="P2"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/txtCupsPotencia2"
                        android:layout_width="105dp"
                        android:layout_height="43dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:background="@drawable/fondo_edittext"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblPotencia3Cups"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/lblPotencia3Cups"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/txtCupsPotencia3"
                        android:layout_width="110dp"
                        android:layout_height="47dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/lblPotencia4Cups"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="P4"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/txtCupsPotencia4"
                        android:layout_width="101dp"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fondo_edittext"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblPotencia5Cups"
                        android:layout_width="14dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/lblPotencia5Cups"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/txtCupsPotencia5"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/lblPotencia6Cups"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/lblPotencia6Cups"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/txtCupsPotencia6"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="371dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAtrasBuscaCups"
                    android:layout_width="132dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_naranja"
                    android:gravity="center"
                    android:text="@string/btnAnteriorBuscaCups"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSiguienteBuscaCups"
                    android:layout_width="129dp"
                    android:layout_height="53dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_naranja"
                    android:gravity="center"
                    android:text="@string/btnSiguienteBuscaCups"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>