<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gas.ActivityGas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pngwing_com">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="267dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLogoGas"
                    android:layout_width="219dp"
                    android:layout_height="197dp"
                    android:layout_gravity="center"
                    android:src="@drawable/inergas_logo_transparente"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/lblRellenarGas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lblRellene"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="381dp"
                android:layout_margin="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtClienteGas"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hintCliente"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/txtCUPSGas"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hintCUPS"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <Spinner
                    android:id="@+id/spnTarifaGas"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:gravity="center"
                    android:textAppearance="@style/SpinnerTextStyle"/>

                <Spinner
                    android:id="@+id/spnPeajeGas"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:gravity="center"
                    android:textAppearance="@style/SpinnerTextStyle"/>

                <Spinner
                    android:id="@+id/spnOfertaGas"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/th"
                    android:gravity="center"
                    android:textAppearance="@style/SpinnerTextStyle"/>

                <CheckBox
                    android:id="@+id/chkRecordar1Gas"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="@string/chkRecordar1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAtrasGas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_verde_presionado"
                    android:text="@string/btnAtras" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSiguienteGas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_verde_presionado"
                    android:text="@string/btnSiguiente" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>