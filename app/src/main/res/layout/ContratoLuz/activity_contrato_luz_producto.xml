<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contrato.ActivityContratoLuzProducto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_dgv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="16dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="182dp"
                    android:layout_height="111dp"
                    app:srcCompat="@drawable/logo_escalax34" />

                <TextView
                    android:id="@+id/lblContratoProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/fondorelleno"
                    android:ems="10"
                    android:gravity="center"
                    android:text="@string/lblProductoContrato"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_gravity="center"
                    android:background="@drawable/fondo_edittext"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/lblPotencia1Producto"
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="P1"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/txtProductoPotencia1"
                        android:layout_width="114dp"
                        android:layout_height="43dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"

                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/lblPotencia2Producto"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="P2"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/txtProductoPotencia2"
                        android:layout_width="105dp"
                        android:layout_height="43dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:background="@drawable/fondo_edittext"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblPotencia3Producto"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/lblPotencia3Cups"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/txtProductoPotencia3"
                        android:layout_width="110dp"
                        android:layout_height="47dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/lblPotencia4Producto"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="P4"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/txtProductoPotencia4"
                        android:layout_width="101dp"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:background="@drawable/fondo_edittext"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblPotencia5Producto"
                        android:layout_width="14dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/lblPotencia5Cups"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/txtProductoPotencia5"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/lblPotencia6Producto"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/lblPotencia6Cups"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/txtProductoPotencia6"
                        android:layout_width="102dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/chkGarantiaOrigen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/chkGarantiaOrigen" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center">
                <EditText
                android:id="@+id/txtInicioContrato"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="10dp"
                android:background="@drawable/fondo_edittext"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/hinttxtInicioContrato"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spnDuracionContrato"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/fondo_edittext"
                    android:gravity="center"
                    android:textAppearance="@style/SpinnerTextStyle"/>

                <CheckBox
                    android:id="@+id/chkRecordarDatosProducto"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/chkRecordarProductoContratado" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAnteriorContratoLuz4"
                    android:layout_width="132dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_naranja"
                    android:gravity="center"
                    android:text="@string/btnAnteriorContactoContrato"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSiguienteContratoLuz4"
                    android:layout_width="132dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_naranja"
                    android:gravity="center"
                    android:text="@string/btnSiguienteContactoContrato"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>