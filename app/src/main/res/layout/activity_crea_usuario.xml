<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreaUsuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_dgv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="245dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/logo_escalax34" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/fondo_edittext"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hintUsuario"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/txtContraseña"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/fondo_edittext"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hitnContraseña"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtConfirmaCon"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_edittext"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hintConfirmaCon"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <ImageView
                    android:id="@+id/imgOjo"
                    android:layout_width="78dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ojo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="373dp"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spnSedes"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:layout_margin="10dp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/txtPrivilegios"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/fondo_edittext"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hintPrivilegio"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/txtIdAgente"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/fondo_edittext"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hintIdAgente"
                    android:inputType="number"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/txtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/fondo_edittext"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hintCorreo"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCrear2"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_naranja"
                    android:text="@string/Crear"
                    android:textColorHint="@color/white"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>